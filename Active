import jenkins.model.Jenkins

def allControllers = []

// For modern CloudBees CI (Operations Center + Controllers)
Jenkins.instance.getAllItems(com.cloudbees.opscenter.server.model.ConnectedMaster).each { cm ->
    allControllers << cm.getDisplayName()
}

return allControllers.sort()
