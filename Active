import jenkins.model.Jenkins
import com.cloudbees.opscenter.server.model.ConnectedMaster

def controllers = Jenkins.instance.getAllItems(ConnectedMaster)

return controllers.collect { it.getDisplayName() }.sort(*



import jenkins.model.Jenkins

def allControllers = []

// For modern CloudBees CI (Operations Center + Controllers)
Jenkins.instance.getAllItems(com.cloudbees.opscenter.server.model.ConnectedMaster).each { cm ->
    allControllers << cm.getDisplayName()
}

return allControllers.sort()


import jenkins.model.Jenkins
import com.cloudbees.opscenter.server.model.ConnectedMaster

def controllers = Jenkins.instance.getAllItems(ConnectedMaster)

controllers.each { c ->
    println c.getDisplayName()
}

import jenkins.model.Jenkins
import com.cloudbees.opscenter.server.model.ConnectedController

Jenkins.instance.getAllItems(ConnectedController).each {
    println it.getDisplayName()
}


import jenkins.model.Jenkins

Jenkins.instance.getAllItems().each { item ->
    def className = item.getClass().getName()
    if (className.toLowerCase().contains("controller") || className.toLowerCase().contains("master")) {
        println "${item.getDisplayName()}  -->  ${className}"
    }
}

import jenkins.model.Jenkins

Jenkins.instance.getAllItems().each { item ->
    def cname = item.getClass().getName().toLowerCase()

    if (cname.contains("controller") || cname.contains("master") || cname.contains("client")) {
        println "${item.getDisplayName()}  -->  ${item.getClass().getName()}"
    }
}


import jenkins.model.Jenkins
import com.cloudbees.jenkins.plugins.clients.MasterClient  // example

return Jenkins.instance.getAllItems(com.cloudbees.jenkins.plugins.clients.MasterClient)
       .collect { it.getDisplayName() }
       .sort()



